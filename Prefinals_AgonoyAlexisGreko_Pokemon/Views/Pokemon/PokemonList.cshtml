@model IEnumerable<Prefinals_AgonoyAlexisGreko_Pokemon.Models.Pokemon>
@{
    ViewBag.Title = "Pokemon List";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/PokemonList.css">
</head>

<h2>Pokemon List</h2>

<table class="pokemon-table">
    <thead>
        <tr>
            <th>Pokemon</th>
            <th>Pokemon</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count(); i += 2)
        {
            <tr>
                <td>
                    @if (i < Model.Count())
                    {
                        <a href="@Url.Action("Details", "Pokemon", new { name = Model.ElementAt(i).Name })">@Model.ElementAt(i).Name</a>
                    }
                </td>
                <td>
                    @if (i + 1 < Model.Count())
                    {
                        <a href="@Url.Action("Details", "Pokemon", new { name = Model.ElementAt(i + 1).Name })">@Model.ElementAt(i + 1).Name</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="pagination">
    @if (ViewBag.Page > 1)
    {
        <a href="@Url.Action("PokemonList", new { page = ViewBag.Page - 1 })" class="btn btn-primary">Previous</a>
    }
    <a href="@Url.Action("PokemonList", new { page = ViewBag.Page + 1 })" class="btn btn-primary">Next</a>
</div>