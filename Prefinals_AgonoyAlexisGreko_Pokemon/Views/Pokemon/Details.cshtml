<style>
    .table {
        width: 100%;
        border-collapse: collapse;
        font-size: 25px;
        background-color: lightblue;
        border: 1px solid black;
    }

        .table th, .table td {
            border: 1px solid black;
            padding: 8px;
        }

        .table th {
            background-color: blue;
            text-align: center;
            color: white;
        }

    ul {
        padding-left: 20px;
        list-style: none;
    }

        ul li {
            padding: 5px 0;
        }

    .two-column-list {
        columns: 2;
        -webkit-columns: 2;
        -moz-columns: 2;
    }

    h3 {
        font-size: 25px;
        text-align: center;
    }

    .btn {
        margin: 0 10px;
        padding: 5px 10px;
        text-decoration: none;
        border: 1px solid black;
        border-radius: 4px;
        background-color: white;
        color: black;
    }

        .btn:hover {
            background-color: lightblue;
            color: black;
        }
</style>

@model Prefinals_AgonoyAlexisGreko_Pokemon.Models.Pokemon
@{
    ViewBag.Title = "Pokémon Details";
}

<h3>@Model.Name</h3>

<h3>Abilities and Moves</h3>
<table class="table">
    <thead>
        <tr>
            <th>Abilities</th>
            <th>Moves</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <ul>
                    @foreach (var ability in Model.Abilities)
                    {
                        <li>@ability</li>
                    }
                </ul>
            </td>
            <td>
                <ul class="two-column-list">
                    @foreach (var move in Model.Moves)
                    {
                        <li>@move</li>
                    }
                </ul>
            </td>
        </tr>
    </tbody>
</table>

<a href="@Url.Action("PokemonList", "Pokemon")" class="btn btn-primary">Back to List</a>